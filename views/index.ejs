<%- include header %>
<form>
    <div class="input-group">
        <input type="text" class="form-control" placeholder="SEARCH" name="keyword">
        <span class="input-group-btn">
            <input type="submit" value="搜索" class="btn btn-default" />
        </span>
    </div>
</form>

<ul class="list-group">
    <% for(var index in post){ %>
     <li class="list-group-item">
        
         <h3><a href="/detail?id=<%= post[index]._id%>"><%= post[index].title%></a></h3>
         <p class="info">
             <span>作者:<%= post[index].author%></span>
             <span>|</span>
             <span>日期：<%= post[index].publishTime%></span>
         </p>
         
     </li>
     <hr>
     <% }%>
</ul>
<%- include footer %>